@model WebApplication2.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
    Layout = "_Layout";
}

<h2>Удалить сотрудника</h2>
<form asp-action="DeleteEmployee" asp-controller="home">
    <div class="form-group">
        <label asp-for="Id" class="control-label">ID сотрудника</label>
        <input type="text" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-default" />
    </div>
</form>

@ViewData["Message"]

<div>
    <a asp-action="Index">Назад</a>
</div>