@using Microsoft.AspNetCore.Mvc.Diagnostics
@model WebApplication2.Models.Employee

@{
    ViewBag.Title = "Add employee";
    Layout = "_Layout";
}

<h2>Добавление сотрудника</h2>
<form asp-action="AddEmployee" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label">Номер телефона</label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CompanyId" class="control-label">ID компании</label>
        <input type="text" asp-for="CompanyId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PassportType" class="control-label">Серия паспорта</label>
        <input type="text" asp-for="PassportType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PassportNumber" class="control-label">Номер паспорта</label>
        <input type="text" asp-for="PassportNumber" class="form-control" />
    </div>
    
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>
@ViewData["Message"]
@ViewData["id"]
<div>
    <a asp-action="Index">Назад</a>
</div>
